def longest_palindrome(s):
    longest = ""

    for i in range(len(s)):
        for j in range(i, len(s)):
            sub = s[i:j+1]

            # check palindrome
            if sub == sub[::-1] and len(sub) > len(longest):
                longest = sub

    return longest


# Example
s = input("Enter string: ")
print("Longest palindrome:", longest_palindrome(s))
